<% provide(:title, "Submit Match") %>
<h1>Submit Match</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: match_submissions_path, method: "post", scope: :match_submission,
                  local: true) do |f| %>
      <%= render 'match_submissions/submit_error_messages' %>

      <%= f.label :team_one_player_one_name, "Team One Player One" %>
      <%= f.text_field :team_one_player_one_name, class: 'form-control', required: "required" %>

      <%= f.label :team_one_player_two_name, "Team One Player Two" %>
      <%= f.text_field :team_one_player_two_name, class: 'form-control', required: "required" %>

      <%= f.label :team_one_score, "Team One Score" %>
      <%= f.number_field :team_one_score, min: 0, required: "required" %>

      <%= f.label :team_two_player_one_name, "Team Two Player One" %>
      <%= f.text_field :team_two_player_one_name, class: 'form-control', required: "required" %>

      <%= f.label :team_two_player_two_name, "Team Two Player Two" %>
      <%= f.text_field :team_two_player_two_name, class: 'form-control', required: "required" %>

      <%= f.label :team_two_score, "Team Two Score" %>
      <%= f.number_field :team_two_score, min: 0, required: "required" %>
      
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
